                    <div class="profile-content">
                        <img src="~/imagenes/Cibertec.png" alt="profileImg">
                    </div>
                    <div class="name-job">
                        <div class="profile_name">Cibertec</div>
                        <div class="job">Web Desginer</div>
                    </div>
                    <i class='bx bx-log-out'></i>
                </div>
            </li>
        </ul>
    </div>
    <section class="home-section">
        <div class="home-content">
            <i class='bx bx-menu'></i>
            <span class="text">Sistema Web Ecommerce</span>
        </div>
        <div class="content">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </div>
    </section>
    <footer>
        <!-- Contenido de tu footer (puede estar vacío) -->
    </footer>   
    <script src=@Url.Content("~/js/script.js")></script>
 

</body>
<style>
