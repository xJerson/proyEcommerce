<body>
    <style>
        .submit-button {
            background: none;
            border: none;
            color: white; /* Color original del texto */
            text-decoration: underline;
            cursor: pointer;
            padding: 0;
            text-decoration: none; /* Quitamos el subrayado */
            font-size: 15px;
            padding: 5px 0;
            white-space: nowrap;
            position: relative;
            opacity: 0.6;
            transition: color 0.3s ease, opacity 0.3s ease; /* Transición para el color del texto y la opacidad */
        }

            .submit-button:hover {
                color: #fff; /* Cambia el color del texto al pasar el cursor */
                opacity: 1; /* Hace que el botón sea completamente visible al pasar el cursor */
            }
    </style>




    <div class="sidebar close">
        <div class="logo-details">
            <i class='bx bxl-c-plus-plus'></i>
            <span class="logo_name">FOOD-ANIMA</span>
        </div>
        <ul class="nav-links">
            <li>
                <a asp-controller="Producto" asp-action="ListadoProductos">
                    <i class='bx bx-grid-alt'></i>
                    <span class="link_name">Inicio</span>
                </a>
                <ul class="sub-menu blank">
                    <li><a class="link_name" href="#">Categorias</a></li>
                </ul>
            </li>
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-collection'></i>
                        <span class="link_name">Categorias</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">

                    <li><a class="link_name" href="#">Categorias</a></li>

                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Perro">Perro</button>
                    
                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Gato">Gato</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Pajaros">Pajaros</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Roedores">Roedores</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Peces y Reptiles">Peces y Reptiles</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Caballos">Caballos</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Vacas">Vacas</button>

                        </form>
                    </li>
                    <li>
                        <form asp-controller="Producto" asp-action="ListadoProductos" method="post" style="display: inline;">
                            <button type="submit" name="buscar" class="submit-button" value="Ovejas y Cabras">Ovejas y Cabras</button>

                        </form>
                    </li>


                </ul>
            </li>
           
            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class='bx bx-cog'></i>
                        <span class="link_name">Procesar</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a class="link_name" href="#">Procesar</a></li>
                    <li><a asp-controller="Producto" asp-action="MantenimientoProducto">Productos</a></li>
                    <li><a asp-controller="Cliente" asp-action="ListadoClientes">Clientes</a></li>
                    

